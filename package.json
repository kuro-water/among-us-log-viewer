{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "report-coverage": "npm run test:coverage && open coverage/lcov-report/index.html",
    "test:watch": "jest --watch",
    "lint": "eslint",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:ci": "eslint . --ext .ts,.tsx --max-warnings=0",
    "e2e": "npx playwright install --with-deps && playwright test",
    "e2e:dev": "npx playwright install --with-deps && npx wait-on http://localhost:3000 --timeout 120000 && playwright test",
    "e2e:ci": "npx playwright install --with-deps && DISABLE_BASEPATH=true npm run build && lsof -ti :3000 | xargs -r kill -9 || true && npx serve@latest out -l 3000 & echo $! > .next_server_pid && npx wait-on http://localhost:3000 --timeout 120000 && playwright test; kill $(cat .next_server_pid) || true",
    "e2e:setup": "npx playwright install --with-deps"
  },
  "dependencies": {
    "highcharts": "^12.4.0",
    "highcharts-react-official": "^3.2.1",
    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
    ,"@playwright/test": "^1.45.0"
  }
}
